<Template name="MenuItem">
  <Param name="label"     type="text"/>
  <Param name="uri"       type="text" default=" "/>
  <Param name="url"       type="text" default="?/"/>
  <Param name="match"     type="text"/>
  <Param name="cssClass" type="text"/>

  <If the="{@match}" is-set>

      <If the="{!sitePage.URI_regexp}" matches="{@match}">
        <a class="{@cssClass} selected" href="{@url}{@uri}">{@label}</a>
        <Else>
          <a class="{@cssClass}" href="{@url}{@uri}">{@label}</a>
        </Else>
      </If>

    <Else>

      <If the="{!sitePage.URI_regexp}" matches="{@uri}">
        <a class="{@cssClass} selected" href="{@url}{@uri}">{@label}</a>
        <Else>
          <a class="{@cssClass}" href="{@url}{@uri}">{@label}</a>
        </Else>
      </If>

    </Else>
  </If>

</Template>