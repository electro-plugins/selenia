<c:template name="static-field">
  <p:param name="url"   type="text"/>
  <p:param name="label" type="text"/>
  <p:param name="name"  type="identifier"/>
  <p:param name="value" type="text"/>
  <p:param name="class" type="identifier"/>
  <p:body>
    <c:test value="{@name}">
      <p:if-set>
        <c:hidden-field name="{@name}" value="{@value}"/>
      </p:if-set>
    </c:test>
    <c:test value="{@url}">
      <p:if-set>
        <a class="staticField {@class}" href="{@url}">{@label}</a>
      </p:if-set>
      <p:if-not-set>
        <div class="staticField {@class}">{@label}</div>
      </p:if-not-set>
    </c:test>
  </p:body>
</c:template>