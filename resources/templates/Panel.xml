<c:template name="panel" default-param="content">
  <p:param name="type" type="text" default=""/>
  <p:param name="title" type="text"/>
  <p:param name="content" type="source"/>
  <p:param name="actions" type="source"/>

  <div class="form {@type}">
    <c:test is-set="{@title}">
      <div class="box-header with-border">
        <h3 class="box-title">{@title}</h3>
      </div>
    </c:test>
    <div class="box-body">
      {@content}
    </div>
    <div class="box-footer">
      {@actions}
    </div>
  </div>

</c:template>
