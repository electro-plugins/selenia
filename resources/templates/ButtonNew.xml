<Template name="ButtonNew" defaultParam="content">
  <Param name="url" type="text"/>
  <Param name="label" type="text" default="$BUTTON_CREATE"/>
  <Param name="content" type="source"/>
  <Param name="barClass" type="text"/>

  <ActionBar class="{@barClass}">

    <Button icon="glyphicon glyphicon-plus-sign" class="btn-success ActionNew" label="{@label}" url="{@url}"/>
    {@content}

  </ActionBar>

</Template>
