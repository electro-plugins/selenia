<c:template name="button-new" default-param="content">
  <p:param name="url" type="text"/>
  <p:param name="label" type="text" default="$BUTTON_CREATE"/>
  <p:param name="content" type="source"/>

  <div class="buttonBar right">
    <c:button icon="glyphicon glyphicon-plus-sign" class="btn-success ActionNew" label="{@label}" url="{@url}"/>
    {@content}
  </div>

</c:template>
