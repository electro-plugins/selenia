<Template name="ButtonsSaveDelete" defaultParam="Content">
  <Param name="key" type="identifier"/>
  <Param name="Content" type="source"/>
  <Param name="barClass" type="text" default="col-sm-12 col-md-11 col-lg-9"/>

  <ActionBar class="{@bar-class}">

    <Button class="btn-primary ActionSave" type="submit" action="submit" label="$BUTTON_SAVE"/>

    <If the="{@key}" is-set>
      <Button label="$BUTTON_DELETE" class="btn-danger" action="delete" confirm
                message="Tem a certeza de que deseja apagar {gender} {singular}?"/>
    </If>

    {@content}

  </ActionBar>

</Template>