<c:template name="buttons-save-delete" default-param="content">
  <p:param name="key" type="identifier"/>
  <p:param name="content" type="source"/>
  <p:param name="bar-class" type="text" default="col-sm-12 col-md-11 col-lg-9"/>

  <c:action-bar class="{@bar-class}">

    <c:button class="btn-primary ActionSave" type="submit" action="submit" label="$BUTTON_SAVE"/>

    <c:if the="{@key}" is-set>
      <c:button label="$BUTTON_DELETE" class="btn-danger" action="delete" confirm
                message="Tem a certeza de que deseja apagar {gender} {singular}?"/>
    </c:if>

    {@content}

  </c:action-bar>

</c:template>