<c:template name="form-layout-2-columns">
  <p:param name="column-1" type="source"/>
  <p:param name="column-2" type="source"/>
  <p:param name="column-class" type="text" default="col-sm-12 col-lg-6"/>
  <p:param name="form-class" type="text" default="form-horizontal"/>
  <p:param name="label-class" type="text" default="col-md-4"/>
  <p:param name="field-class" type="text" default="col-md-8"/>

  <div class="row">
    <div class="{@column-class}">
      <div class="{@form-class}">
        <c:apply where="field">
          <p:attrs width="{@field-class}" label-width="{@label-class}"/>
          {@column-1}
        </c:apply>
      </div>
    </div>
    <div class="{@column-class}">
      <div class="{@form-class}">
        <c:apply where="field">
          <p:attrs width="{@field-class}" label-width="{@label-class}"/>
          {@column-2}
        </c:apply>
      </div>
    </div>
  </div>

</c:template>
