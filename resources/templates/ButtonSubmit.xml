<c:template name="button-submit" default-param="content">
  <p:param name="label" type="text" default="$BUTTON_SAVE"/>
  <p:param name="content" type="source"/>
  <p:param name="auto-disable" type="bool"/>
  <p:param name="bar-class" type="text" default="col-sm-12 col-md-11 col-lg-9"/>

  <c:action-bar class="{@bar-class}">

    <c:if the="{@auto-disable}" is-true>
      <c:button id="submitBtn" class="btn btn-primary ActionSave" label="{@label}"
                script="Button_disable('submitBtn');doAction('submit')"/>
      <p:else>
        <c:button class="btn-primary ActionSave" label="{@label}" action="submit"/>
      </p:else>
    </c:if>

    {@content}

  </c:action-bar>

</c:template>
