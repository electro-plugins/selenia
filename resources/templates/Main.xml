<c:template name="main" default-param="content">
  <p:param name="content" type="source"/>
  <p:stylesheet src="lib/bootstrap/dist/css/bootstrap.min.css"/>
  <p:script src="lib/jquery/dist/jquery.min.js"/>
  <p:script src="lib/bootstrap/dist/js/bootstrap.min.js"/>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="">{!application.appName}</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <c:main-menu class="nav navbar-nav navbar-right" depth="1"/>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container" style="margin-top:70px">

    {!page.statusMessage}

    {@content}

  </div>

</c:template>
