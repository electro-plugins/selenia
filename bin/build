#!/usr/bin/env bash

function install ()
{
  echo -e "\nInstalling build tools..."
  sudo npm install -g less less-plugin-clean-css sane || exit $?
}

which lessc > /dev/null || install
which sane > /dev/null || install

if [ "$1" == "--watch" ]; then
  echo -e "\nPress Ctrl-C to stop.\n"
  sane 'echo "Building..."; lessc -s resources/assets/less/main.less --source-map=public/dist/main.map --clean-css="--s1" public/dist/main.css && echo "Done.\n"' resources/assets/less --glob='**/*.less'
else
echo -e "Note: when developing, you can compile automatically using the --watch flag.\n\nBuilding..."
lessc -s resources/assets/less/main.less --source-map=public/dist/main.map --clean-css="--s1" public/dist/main.css && echo -e "Done.\n"
fi
